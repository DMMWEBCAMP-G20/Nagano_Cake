.sign_in {
	text-align :center;
	width: 100%;
	margin: 100px auto;
}

.sign_in_form {
	margin: 0 auto;
}


.actions {
	margin: 0 auto;
}

.members_s_info1{
  padding: 10px;
  font-size: 20px;
}
.members_s_info2{
  padding: 10px;
  font-size: 20px;
  margin: 10px;
}
.members_s_table {
  border-collapse: collapse;
  border: solid 2px whitesmoke;
  font-size: 15px;
  margin: 10px;
  text-align: center;
  width: 500px;
}
.members_s_table th {
  background-color: whitesmoke;
  border: solid 2px whitesmoke;
  padding: 10px;
  width: 150px;
}
.members_s_table td {
  background-color: white;
  border: solid 2px whitesmoke;
  padding: 10px;
  width: 350px;
}

.member_edit{
  width: 700px;
  border-collapse: separate;
}

.member_e_th{
  padding: 10px;
  margin: 10px;
}

.member_e_td{
  padding: 10px;
  margin: 10px;
}



