<div class="container">
  <div class="row">
    <div class="col-xs-3">
						<%= form_with url: products_path, method: :get, local: true do |f| %>
							<%= f.collection_select :i, Genre.all, :id, :name, :include_blank => "-------" %>
							<%= f.submit "ジャンル検索" %>
						<% end %>
	</div>


		<div class="col-xs-9">
			<h1>商品一覧</h1>
				<% @products.each do |product| %>
				<tr>
					<div class="col-xs-3"><td>
			      <%= link_to product_path(product) do %>
			        <%= attachment_image_tag product, :image, :size =>'50x50', fallback: "no_image.jpg" %>
			      <% end %>
					</td><br>
					<td><%= product.name %></td><br>
					<td><%= product.price %></td></div>
				</tr>
				<% end %>
		</div>
	</div>
</div>