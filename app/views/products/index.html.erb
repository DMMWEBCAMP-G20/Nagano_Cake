<div class="row brick">
    <div class="col-xs-1"></div>
    <div class="col-xs-2">
      <%= form_with url: products_path, method: :get, local: true do |f| %>
      <%= f.collection_select :i, Genre.all, :id, :name, :include_blank => "-------" %>
      <%= f.submit "ジャンル検索" %>
      <% end %>
    </div>
    <div class="col-xs-8">

      <h3>商品一覧</h3>
      <div class="index">

        <% @products.each do |product| %>
        <div class="thumbnail product">
          <%= link_to product_path(product) do %>
          <%= attachment_image_tag product, :image, :size =>'150x150', fallback: "no_image.jpg" , class:"image" %>
          <% end %>
          <div class="caption">
            <p><%= product.name %></p>

            <p><%= product.price %></p>
          </div>
        </div>
        <% end %>
      </div>

    </div>
    <div class="col-xs-1"></div>

</div>

<%= link_to "商品一覧", products_path, class: "btn btn-success btn-block" %>