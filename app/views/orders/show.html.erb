<div class="body">
	<div class="container">
		<h2>注文履歴詳細</h2>
		<div class="row">
			<div class="col-xs-1"></div>
			<div class="col-xs-4">
				<p>注文情報</p>
				<table class="table table-striped">
					<tr>
						<th>注文日</th>
						<td><%= @order.created_at %></td>
					</tr>
					<tr>
						<th>配送先</th>
						<td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
					</tr>
					<tr>
						<th>支払方法</th>
						<td><%= @order.pay_type %></td>
					</tr>
					<tr>
						<th>ステータス</th>
						<td><%= @order.order_status_i18n %></td>
					</tr>
				</table>
			</div>
			<div class="col-xs-3">
				<p>請求合計</p>
				<table class="table table-striped">
					<tr>
						<th>商品合計</th>
						<td><% tax_excluded_amount = @order.total_price - @order.postage %>
							<%= tax_excluded_amount.round %>
						</td>
					</tr>
					<tr>
						<th>配送料</th>
						<td><%= @order.postage %></td>
					</tr>
					<tr>
						<th>ご請求料金</th>
						<td><%= @order.total_price %></td>
					</tr>
				</table>
			</div>
			<div class="col-xs-2"></div>
		</div>
		<div class="row">
			<div class="col-xs-1"></div>
			<div class="col-xs-6">
				<p>注文内容</p>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>商品</th>
							<th>単価（税込）</th>
							<th>個数</th>
							<th>小計</th>
						</tr>
					</thead>
					<tbody>
          <% @order.order_products.each do |order_product| %>
            <tr>
              <td><%= order_product.name %></td>
              <td><% taxed_price = order_product.price * 1.1 %>
         					<%= taxed_price.round %>
              </td>
              <td><%= order_product.quantity %></td>
              <td><%= taxed_price.round * order_product.quantity %></td>
            </tr>
          <% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>