<div class="body">
	<div class="container">
		<h2>注文履歴詳細</h2>
		<%= @orders.each do |order| %>
		<div class="row">
			<div class="col-xs-1"></div>
			<div class="col-xs-4">
				<p>注文情報</p>
				<table class="table table-striped">
					<tr>
						<th>購入者</th><td><%= order.member.reading_first_name %></td>
					</tr>
					<tr>
						<th>配送先</th><td><%= order.postal_code %><%= order.address %><br>
							<%= order.name %></td>
					</tr>
					<tr>
						<th>支払方法</th><td><%= order.pay_type %></td>
					</tr>
					<tr>
						<th>ステータス</th><td><%= order.order_status_i18n %></td>
					</tr>
				</table>
			</div>
		<% end %>
			<div class="col-xs-3">
				<p>請求合計</p>
				<table class="table table-striped">
					<tr>
						<th>商品合計</th><td><%= order_product.order.total_price %></td>
					</tr>
					<tr>
						<th>配送料</th><td><%= order_product.order.postage %></td>
					</tr>
					<tr>
						<th>ご請求料金</th><td><%= order_product.order.total_price + order_product.order.postage %></td>
					</tr>
				</table>
			</div>
			<div class="col-xs-2"></div>
		</div>
		<div class="row">
			<div class="col-xs-1"></div>
			<div class="col-xs-6">
				<p>注文内容</p>
				<table class="table table-striped">
					<thead>
						<tr>商品</tr>
						<tr>単価（税込）</tr>
						<tr>個数</tr>
						<tr>小計</tr>
					</thead>
					<tbody>
						<td><%= order_product.product.name %></td>
						<td><%= oder_product.price %></td>
						<td><%= order_product.quantity %></td>
						<td><%= order_product.price * order_product.quantity %></td>
					</tbody>
				</table>
			</div>
		</div>
		<% end %>
	</div>
</div>