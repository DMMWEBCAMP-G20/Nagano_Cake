<div class="row">
	<div class="col-xs-1"></div>
	<div class="row">
		<div class="col-xs-2">
			<h4>注文履歴一覧</h4>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-1"></div>
		<div class="col-xs-9">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>注文日</th>
						<th>配送先</th>
						<th>注文商品</th>
						<th>支払金額</th>
						<th>ステータス</th>
						<th>注文詳細</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
					<tr>
						<td><%= order.created_at %></td>
						<td><%= order.postal_code %><br>
							<%= order.address %><br>
							<%= order.name %>
						</td>
						<td><% order.order_products.each do |order_product| %>
							<%= order_product.name %>
							<% end %>
						</td>
						<td><%= number_to_currency(order.total_price, :locale => 'jp') %></td>
						<td><%= order.order_status_i18n %></td>
						<td><%= link_to "表示する", order_path(order),class:"btn-sm btn-success" %></td>
					</tr>
					<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-xs-1"></div>
		</div>
	</div>
