<div class="body">
	<div class="container">
		<h4>注文履歴一覧</h4>
		<div class="row">
			<div class="col-xs-2"></div>
			<div class="col-xs-8">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>注文日</th>
							<th>配送先</th>
							<th>注文商品</th>
							<th>支払金額</th>
							<th>ステータス</th>
							<th>注文詳細</th>
						</tr>
					</thead>
					<tbody>
						<% @orders.each do |order| %>
							<tr>
								<td><%= order.created_at %></td>
								<td><%= order.member.reading_first_name %></td>
								<td><%= order.order_product.quantity %></td>
								<td><%= order.order_status_i18n %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-xs-2"></div>
		</div>
	</div>
</div>