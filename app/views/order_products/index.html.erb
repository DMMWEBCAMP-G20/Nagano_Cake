<div class="body">
	<div class="container">
		<h4>注文履歴一覧</h4>
		<div class="row">
			<div class="col-xs-2"></div>
			<div class="col-xs-8">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>注文</th>
							<th>配送先</th>
							<th>注文商品</th>
							<th>支払金額</th>
							<th>ステータス</th>
							<th>注文詳細</th>
						</tr>
					</thead>
					<tbody>
						<% @order_products.each do |order_product| %>
							<tr>
								<td><%= order_product.order.created_at %></td>
								<td><%= order_product.order.address%><br>
									<%= order_product.order.postal_code%></td>
								<td><%= order_product.product.name %></td>
								<td><%= order_product.order.total_price%></td>
								<td><%= order_product.order.order_status_i18n %></td>
								<td><%= link_to "表示する", order_product_path(order_product.id),class:"btn-sm btn-success" %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-xs-2"></div>
		</div>
	</div>
</div>