<div class="row">
  <div class="col-xs-1"></div>
  <h2><span class="label label-default">新規登録</span></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>



  <%= render "devise/shared/error_messages", resource: resource %>



  <table class=‘member_sign_in’>
    <tbody>
      <tr>
        <th class=‘member_e_th’>名前</th>
        <td>
          <span>(姓)<%= f.text_field :first_name, value:@member.first_name %></span>
          <span>(名)<%= f.text_field :last_name, value:@member.last_name %></span>
        </td>
      </tr>
      <br>
      <tr>
        <th class=‘member_e_td’>フリガナ</th>
        <td>
          <span>(セイ)<%= f.text_field :reading_first_name, value:@member.reading_first_name %></span>
          <span>(メイ)<%= f.text_field :reading_last_name, value:@member.reading_last_name %></span>
        </td>
      </tr>
      <br>
      <tr>
        <th class=‘member_e_th’>メールアドレス</th>
        <td class=‘member_e_td’><%= f.text_field :email, value:@member.email %></td>
      </tr>
      <br>
      <tr>
        <th class=‘member_e_th’>郵便番号(ハイフンなし)</th>
        <td class=‘member_e_td’><%= f.text_field :postal_code, value:@member.postal_code %></td>
      </tr>
      <br>
      <tr>
        <th class=‘member_e_th’>住所</th>
        <td class=‘member_e_td’><%= f.text_field :address, autofocus: true, autocomplete: "" %></td>
      </tr>
      <br>
      <tr>
        <th class=‘member_e_th’>電話番号</th>
        <td class=‘member_e_td’><%= f.text_field :phone_number, value:@member.phone_number %></td>
      </tr>
      <br>
      <tr>
        <th class=‘member_e_th’>パスワード
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </th>
        <br />
        <td class=‘member_e_td’><%= f.password_field :password, autocomplete: "" %></td>
      </tr>
      <br>
      <tr>
        <th class=‘member_e_th’>パスワード(確認用)</th>
        <td class=‘member_e_td’><%= f.password_field :password_confirmation, autocomplete: "" %></td>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  <% end %>
  <div class="col-xs-1"></div>
</div>

<span class="label label-default">すでに登録みの方</span>

<%= render "members/shared/links" %>
