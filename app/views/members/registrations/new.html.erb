<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<tr>名前
  <td>
   <div class="field">
    <%= f.label :姓 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "" %>
   </div>
  </td>
  <td>
   <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "" %>
   </div>
  </td>
</tr>
  <div class="field">
    <%= f.label :"(セイ)"%><br />
    <%= f.text_field :reading_first_name, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :"(メイ)" %><br />
    <%= f.text_field :reading_last_name, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号" %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "" %>
  </div>


  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "members/shared/links" %>
