<h1>ジャンル追加・一覧画面</h1>

<%= form_with model: @genre do |f| %>
  <%= f.label :ジャンル %>
  <%= f.text_field :name %>
  <%= f.radio_button :is_active, :enable %>有効
  <%= f.radio_button :is_active, :disable %>無効
  <%= f.submit "追加" %>
<% end %>


<table class="table">
    <thead>
        <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= genre.is_active_i18n %></td>
                <td><%= link_to "編集", edit_genre_path(genre) %></td>
                <td><%= link_to "削除", genre_path(genre), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>