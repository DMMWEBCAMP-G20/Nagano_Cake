<h1>商品新規登録機能</h1>

 <%= form_with model: @product, url: admin_products_path do |f| %>
	
	  <div id= "error_explanation" class="alert alert-danger">
	   	<h4><%= @product.errors.count %>errors prohibited this book from being saved:</h4>
	    <ul>
	      <% @product.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	  <%= f.attachment_field :image %>
	 

	<h4>商品名</h4>
	<%= f.text_field :name %>
	<h4>商品説明</h4>
	<%= f.text_area :explanatory %>
	<h4>ジャンル</h4>
<%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "---"} %>
	<h4>値段</h4>
	<%= f.text_field :price %>
	<h4>販売ステータス</h4>
	<%= f.select :name, {販売中: 1, 品切れ: 2} %><br>

	<%= f.submit '新規登録' %>
<% end %>
