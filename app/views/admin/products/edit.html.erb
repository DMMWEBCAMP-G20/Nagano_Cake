<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
    <h3 class="admin-products-title">商品編集画面</h3>

    <%= form_with model: @product, url: admin_product_path(@product) do |f| %>

      <div class="admin-products-image"><%= attachment_image_tag @product, :image, :size =>'150x120', fallback: "no_image.jpg" %></div>
      <%= f.attachment_field :image %>

      <h4>商品名</h4>
      <%= f.text_field :name, class: "form-control" %>

      <h4>商品説明</h4>
      <%= f.text_area :explanatory, class: "form-control" %>

      <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "---"} %>

      <h4>値段</h4>
      <%= f.text_field :price, class: "form-control" %>

      <h4>販売ステータス</h4>
      <%= f.select :is_sales_status, Product.is_sales_statuses.keys.map {|k| [I18n.t("enums.product.is_sales_status.#{k}"), k]} %>

      <%= f.submit '変更を保存', class: "btn btn-info btn-lg btn-block admin-products-create" %>

    <% end %>
  </div>
  <div class="col-xs-1"></div>
</div>