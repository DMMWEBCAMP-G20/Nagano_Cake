<h1>商品一覧画面</h1>

<table class="table">
	<tr>
		<th>商品ID</th>
		<th>商品名</th>
		<th>税抜き価格</th>
		<th>ジャンル</th>
		<th>ステータス</th>
	</tr>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= link_to product.name, admin_product_path(product) %></td>
          <td><%= product.price %></td>
          <td><%= product.genre.name %></td>
          <td><%= product.is_sales_status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>