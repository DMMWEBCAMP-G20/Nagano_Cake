<div class="row">
	<div class="col-xs-1"></div>
	<div class="row">
		<div class="col-xs-2">
			<h3>注文一覧画面</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-6">
			<table class="table">
				<thead>
					<tr class="active">
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% Order.all.each do |order| %>
					<tr>
						<td><%= link_to order.created_at, admin_order_path(order.id) %></td>
						<td><%= order.member.full_name %></td>
						<td><%= order.total_quantity %></td>
						<td><%= order.order_status_i18n %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
		<div class="col-xs-1"></div>
</div>
