<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-1">
			</div>
			<div class="col-xs-4">
				<h4>会員詳細画面</h4>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th></th>
						</tr>
						<tr>
							<th>顧客ID</th>
							<th><%= @member.id %><%= @member.is_active_i18n %></th>
						</tr>
						<tr>
							<th>氏名</th>
							<th><%= @member.first_name %></th>
						</tr>
						<tr>
							<th>フリガナ</th>
							<th><%= @member.reading_first_name %><%= @member.reading_last_name %></th>
						</tr>
						<tr>
							<th>郵便番号</th>
							<th><%= @member.postal_code %></th>
						</tr>
						<tr>
							<th>住所</th>
							<th><%= @member.address %></th>
						</tr>
						<tr>
							<th>電話番号</th>
							<th><%= @member.phone_number %></th>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<th><%= @member.email %></th>
						</tr>
						<tr>
							<th><%= link_to "編集", edit_admin_member_path(@member.id),class:"btn-sm btn-success" %></th>
							<th><%= link_to "注文履歴一覧", admin_members_path, class:"btn-sm btn-success"%></th>
						</tr>
					</thead>
				</table>
			</div>
			<div class="col-xs-7"></div>
		</div>
	</div>
</div>


