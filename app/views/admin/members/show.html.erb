<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-1">
			</div>
			<div class="col-xs-10">
				<h4>会員詳細画面</h4>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
							<tr>
								<td>顧客ID</td>
								<td><%= @member.id %>有効会員</td>
								<td>氏名</td>
								<%= @member.name %>
								<td>フリガナ</td>
								<%= @member.first_name, last_name%>
								<td>郵便番号</td>
								<%= @member.postal_code %>
								<td>住所</td>
								<%= @member.address %></td>
								<td>電話番号</td>
								<%= @member.phone_number %></td>
								<td>メールアドレス</td>
								<%= @member.email %>
								<td><%= link_to "編集", admin_members_edit_path,class:"btn-sm btn-success" %></td>
								<td><%= link_to "注文履歴一覧", class:"btn-sm btn-danger"%></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-xs-1"></div>
		</div>
	</div>
</div>