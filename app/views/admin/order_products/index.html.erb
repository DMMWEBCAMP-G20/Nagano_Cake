<div class="body">
	<div class="container">
		<h4>注文一覧画面</h4>
		<div class="row">
			<div class="col-xs-2"></div>
			<div class="col-xs-8">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>購入日時</th>
							<th>購入者</th>
							<th>注文個数</th>
							<th>注文ステータス</th>
						</tr>
					</thead>
					<tbody>
						<% @order_products.each do |order_product| %>
							<tr>
								<td><%= link_to order_product.created_at, admin_order_products_path(order_product.id) %></td>
								<td><%= order_product_id %></td>
								<td><%= order_product_quantity %></td>
								<td></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="col-xs-2"></div>
		</div>
	</div>