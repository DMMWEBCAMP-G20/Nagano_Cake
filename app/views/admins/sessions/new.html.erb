<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <p><%= f.label :"メールアドレス" %></p>
        <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></p>
      </div>

      <div class="field">
        <p><%= f.label :パスワード %></p>
        <p><%= f.password_field :password, placeholder: "6文字以上", autocomplete: "current-password", class: "form-control" %></p>
      </div>

      <div class="actions">
        <p><%=f.submit "ログイン", class: "btn btn-info btn-lg btn-block admin-loginbutton" %></p>
      </div>
    <% end %>
  </div>
  <div class="col-xs-1"></div>
</div>

